<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AdviesActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/idAdvies_scroll"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@+id/header_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/idInformatie_boxred"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/idInformatie_boxorange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/idInformatie_colorred"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorRood" />

            <TextView
                android:id="@+id/idInformatie_textred"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/idInformatie_boxorange"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/idInformatie_boxyellow"
            app:layout_constraintStart_toEndOf="@id/idInformatie_boxred"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/idInformatie_colororange"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorOranje" />

            <TextView
                android:id="@+id/idInformatie_textorange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/idInformatie_boxyellow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/idInformatie_boxblue"
            app:layout_constraintStart_toEndOf="@id/idInformatie_boxorange"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/idInformatie_coloryellow"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorGeel" />

            <TextView
                android:id="@+id/idInformatie_textyellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="-1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/idInformatie_boxblue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/idInformatie_boxgreen"
            app:layout_constraintStart_toEndOf="@id/idInformatie_boxyellow"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/idInformatie_colorblue"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorBlauw" />

            <TextView
                android:id="@+id/idInformatie_textblue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/idInformatie_boxgreen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/idInformatie_boxpink"
            app:layout_constraintStart_toEndOf="@id/idInformatie_boxblue"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/idInformatie_colorgreen"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorGroen" />

            <TextView
                android:id="@+id/idInformatie_textgreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="+1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/idInformatie_boxpink"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/idInformatie_boxpurple"
            app:layout_constraintStart_toEndOf="@id/idInformatie_boxgreen"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/idInformatie_colorpink"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorRoze" />

            <TextView
                android:id="@+id/idInformatie_textpink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="+2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/idInformatie_boxpurple"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/idInformatie_boxpink"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/idInformatie_colorpurple"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/colorPaars" />

            <TextView
                android:id="@+id/idInformatie_textpurple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="+3" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idAdvies_scroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/idAdvies_Button0"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:drawableLeft="@drawable/arrow_down2"
                android:text="Button" />

            <ImageView
                android:id="@+id/idAdvies_Image0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/adviesno" />

            <Button
                android:id="@+id/idAdvies_Button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/arrow_down2"
                android:text="Button" />

            <ImageView
                android:id="@+id/idAdvies_Image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/adviesng" />

            <Button
                android:id="@+id/idAdvies_Button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/arrow_down2"
                android:text="Button" />

            <ImageView
                android:id="@+id/idAdvies_Image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/adviesng" />

            <Button
                android:id="@+id/idAdvies_Button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/arrow_down2"
                android:text="Button" />

            <ImageView
                android:id="@+id/idAdvies_Image3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/adviesng" />

            <Button
                android:id="@+id/idAdvies_Button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/arrow_down2"
                android:text="Button" />

            <ImageView
                android:id="@+id/idAdvies_Image4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/adviesng" />

            <Button
                android:id="@+id/idAdvies_Button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/arrow_down2"
                android:text="Button" />

            <ImageView
                android:id="@+id/idAdvies_Image5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/adviesng" />

            <Button
                android:id="@+id/idAdvies_Button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/arrow_down2"
                android:text="Button" />

            <ImageView
                android:id="@+id/idAdvies_Image6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/adviesng" />

            <Button
                android:id="@+id/idAdvies_afronden"
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:background="@color/colorVerder"
                android:text="@string/Advies_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollView3" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>